<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:id="@+id/fragment_language"
    style="@style/screen_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"
            android:scaleType="centerCrop"
            android:layout_marginRight="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/nunitobold"
            android:padding="10dp"
            android:text="@string/language"
            android:textSize="20dp"
            style="@style/text_color"/>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/btnVietNamese"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="30dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        style="@style/screen_card_language_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:paddingHorizontal="10dp"
            tools:ignore="ExtraText">

            <com.makeramen.roundedimageview.RoundedImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:src="@drawable/ic_vietnam"
                app:riv_corner_radius="100dp"></com.makeramen.roundedimageview.RoundedImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/nunitobold"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="@string/ti_ng_vi_t"
                android:textSize="18dp"
                style="@style/text_color"/>

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/btnCheckVietNamese"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                app:riv_corner_radius="100dp"></com.makeramen.roundedimageview.RoundedImageView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/btnEnglish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        style="@style/screen_card_language_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:paddingHorizontal="10dp"
            tools:ignore="ExtraText">

            <com.makeramen.roundedimageview.RoundedImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:src="@drawable/ic_english"
                app:riv_corner_radius="100dp"></com.makeramen.roundedimageview.RoundedImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/nunitobold"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="@string/english"
                android:textSize="18dp"
                style="@style/text_color"/>
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/btnCheckEnglish"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                app:riv_corner_radius="100dp"></com.makeramen.roundedimageview.RoundedImageView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>